{
    "name": "Get Google Tag Manager Size",
    "version": "2.1.3",
    "manifest_version": 3,
    "permissions": [
        "webRequest"
    ],
    "host_permissions": [ "*://*/*" ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["performance.js"]
        }

    ],
    "action": {
        "default_title": "Get Google Tag Manager Size",
        "default_icon": {
            "16": "icon-16x16.png",
            "38": "icon-38x38.png",
            "48": "icon-48x48.png",
            "128": "icon-128x128.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon-16x16.png",
        "38": "icon-38x38.png",
        "48": "icon-48x48.png",
        "128": "icon-128x128.png"
    }
}