{
    "name": "Get Google Tag Manager Size",
    "version": "3.0.0",
    "manifest_version": 3,
    "permissions": [
        "webRequest",
        "webNavigation",
        "sidePanel",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [ "*://*/*" ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open GTM Size Panel",
        "default_icon": {
            "16": "icon-16x16.png",
            "38": "icon-38x38.png",
            "48": "icon-48x48.png",
            "128": "icon-128x128.png"
        }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "commands": {
        "_execute_side_panel": {
            "description": "Open GTM Size Side Panel",
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            }
        }
    },
    "icons": {
        "16": "icon-16x16.png",
        "38": "icon-38x38.png",
        "48": "icon-48x48.png",
        "128": "icon-128x128.png"
    }
}